--- |
  target datalayout = "e-m:o-i64:64-i128:128-n32:64-S128"
  target triple = "aarch64--"
  define void @test_constant() {
  entry:
    ret void
  }
  define void @test_fconstant() {
  entry:
    ret void
  }
  @var = global i8 0
  define i8* @test_global() { ret i8* undef }
...

